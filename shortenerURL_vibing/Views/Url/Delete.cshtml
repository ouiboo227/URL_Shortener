@model shortenerURL_vibing.Models.UrlModel
@{
    ViewData["Title"] = "Delete URL";
}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-danger-subtle shadow-sm">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Delete URL</h4>
            </div>
            <div class="card-body">
                <p class="mb-3">Are you sure you want to delete this short URL?</p>
                <ul class="list-group mb-3">
                    <li class="list-group-item d-flex justify-content-between">
                        <span class="text-muted">Short URL</span>
                        <strong>@Model.ShortenedUrl</strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span class="text-muted">Original URL</span>
                        <a href="@Model.OriginalUrl" target="_blank" rel="noopener noreferrer">@Model.OriginalUrl</a>
                    </li>
                </ul>

                <form asp-action="Delete" method="post" class="d-flex gap-2">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>